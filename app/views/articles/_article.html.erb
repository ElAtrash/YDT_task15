<div id="delete-article" class="card text-white bg-dark mb-3" style="width: 32rem;">
  <div class="card-body">
    <h4 class="card-title"><%= article.title %></h4>
    <h6 class="card-subtitle mb-3 text-muted"><small><%= time_ago_in_words article.created_at %> ago</small></h6>
    <p class="card-text"><%= article.body %></p>
    <%= link_to 'Show', article, class: "btn btn-danger btn-sm", style: "background-color: #EB5E55;" %>
    <div class="btn-group" role="group">
      <button id="btnGroupDrop1" type="button" class="btn btn-outline-info btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      </button>
      <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
        <%= link_to 'Edit', edit_article_path(article), class:"dropdown-item" %>
        <%= link_to 'Destroy', article, remote: true, method: :delete, data: { confirm: 'Are you sure?' }, id: "delete-article", class:"dropdown-item" %>
      </div>
    </div>  
  </div>
</div>